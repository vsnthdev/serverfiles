{
    "name": "GitHub Codespaces (Default)",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "extensions": [
        "wmaurer.change-case",
        "streetsidesoftware.code-spell-checker",
        "mikestead.dotenv",
        "dbaeumer.vscode-eslint",
        "spywhere.guides",
        "wix.vscode-import-cost",
        "xabikos.JavaScriptSnippets",
        "PKief.material-icon-theme",
        "herrmannplatz.npm-dependency-links",
        "2gua.rainbow-brackets",
        "aaronthomas.vscode-snazzy-operator",
        "henriiik.vscode-sort",
        "Tyriar.sort-lines",
        "redhat.vscode-yaml"
    ],
    "settings": {
        "files.eol": "\n",
        "editor.fontSize": 20,
        "prettier.tabWidth": 4,
        "editor.cursorWidth": 3,
        "editor.lineHeight": 50,
        "files.encoding": "utf8",
        "guides.normal.width": 4,
        "editor.fontWeight": "400",
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.linkedEditing": true,
        "editor.fontLigatures": true,
        "prettier.singleQuote": true,
        "editor.smoothScrolling": true,
        "eslint.packageManager": "npm",
        "prettier.requireConfig": true,
        "editor.defaultFormatter": null,
        "files.trimFinalNewlines": false,
        "files.insertFinalNewline": true,
        "workbench.startupEditor": "none",
        "editor.cursorBlinking": "smooth",
        "editor.detectIndentation": false,
        "prettier.useEditorConfig": false,
        "editor.suggestSelection": "first",
        "terminal.integrated.fontSize": 21,
        "editor.fontFamily": "'Fira Code'",
        "editor.autoClosingQuotes": "always",
        "editor.inlineSuggest.enabled": true,
        "editor.autoClosingDelete": "always",
        "terminal.integrated.lineHeight": 1.2,
        "editor.suggest.insertMode": "replace",
        "editor.autoClosingBrackets": "always",
        "editor.autoClosingOvertype": "always",
        "workbench.editor.enablePreview": false,
        "editor.autoSurround": "languageDefined",
        "diffEditor.ignoreTrimWhitespace": false,
        "extensions.ignoreRecommendations": true,
        "workbench.editor.closeEmptyGroups": true,
        "workbench.colorTheme": "Snazzy Operator",
        "security.workspace.trust.enabled": false,
        "prettyxml.settings.indentSpaceLength": 4,
        "workbench.editor.untitled.hint": "hidden",
        "terminal.integrated.fontWeightBold": "400",
        "workbench.iconTheme": "material-icon-theme",
        "terminal.integrated.defaultProfile.linux": "fish",
        "terminal.integrated.fontFamily": "'CaskaydiaCove NF'",
        "terminal.integrated.tabs.hideCondition": "singleTerminal",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        },
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        },
        "files.exclude": {
            ".svelte-kit": true,
            "**/.parcel-cache": true,
            "**/.vercel": true,
            "**/node_modules": true,
            "**/package-lock.json": true,
            "**/yarn.lock": true,
            "tsconfig.tsbuildinfo": true
        },
        "[json]": {
            "editor.defaultFormatter": "vscode.json-language-features"
        },
        "[yaml]": {
            "editor.insertSpaces": true,
            "editor.tabSize": 4,
            "editor.defaultFormatter": null
        },
        "[javascript]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[jsonc]": {
            "editor.defaultFormatter": "vscode.json-language-features"
        },
        "[typescript]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
    }
}
